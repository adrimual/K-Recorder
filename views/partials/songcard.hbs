
  <div class = 'quote-card'>
    <div class = 'quote-info'>
      <img src="{{userId.profilepic}}" alt="">
      <div class = 'quote-creator-info'>
      <p class="quote-card__title">{{this.title}}</p>
      <p class="quote-card__artist">{{this.artist}}</p>
      <p class="quote-card__description">{{this.description}}</p>
      </div>
      <audio controls>
      <source src="{{this.song}}" type='audio/mpeg'>
      </audio>
    <div class ='quote-buttons'>
      <a href="/comments/{{this._id}}"><img src="../images/comment.png" alt=""></a>
      <a href="/profile/delete/{{this._id}}"><img src="../images/delete.png" alt=""></a>
    </div>
    </div>
      
      <div class = 'comments-section'>
      {{#each this.comments}}
      <p class="quote-card__text">{{text}}</p>
      <img src="{{userId.profilepic}}" alt="">
      <p class="quote-card__name">@{{userId.name}}</p>
      
      {{/each}}
      </div>
  </div>
</div>
